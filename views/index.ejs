<html>
<head> 
<title> ToDo App </title>
 <link href="https://fonts.googleapis.com/css?family=Lato:100" rel="stylesheet">
 <link href="/styles.css" rel="stylesheet">
</head>

<body>
<div class="container">
<h2> A Simple ToDo List App </h2>

<form action ="/addtask" method="POST">

<input type="text" name="newtask" placeholder="add new task">
<button> Add Task </button>


<h2> TODO list </h2>

<% for( var i = 0; i < tasks.length; i++){ 
    if (!tasks[i].done) {
    %>
    <li><input type="checkbox" name="check" value="<%= tasks[i].name %>" /> <%= tasks[i].name %> </li>
<% }} %>

<button formaction="/removetask" type="submit" id="top"> DONE </button>
</form>

<h2> Completed tasks </h2>

 <% for(var i = 0; i < tasks.length; i++){
    if (tasks[i].done) {
        %>
    <li><%= tasks[i].name %> </li>
<% }} %>

</div>

</body>
</html>
